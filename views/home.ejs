<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="#">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/javascript/script.js"></script>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Jammer</title>
</head>
<body>
    <div class="box-container">  
            <div class="timer-container">
                <div class="btn-group">
                        <button class="button" id="pomodoro">Pomodoro</button>
                        <button class="button" id="shortBr">Short Break</button>
                        <button class="button" id="longBr">Long Break</button>
                </div>
                <div class="time">
                    <table>
                        <tr>
                            <th class="min-div">
                                <input type="number" id="minutes" name="min" min="1" max="5" value="25">
                            </th>
                            <th class="sep">:</th>
                            <th class="sec-div">
                                <input type="number" id="seconds" name="sec" min="1" value="00">
                            </th>
                        </tr>
                        <tr class="min-sec">
                            <td id="minText">min</td>
                            <td id="space"></td>
                            <td id="secText">sec</td>
                        </tr>
                    </table>
                </div>
                <section id="start-div">
                    <button type="button" id="start" class="start">Start</button>
                    <audio id="audio" src="/audio/buttonClick.mp3"></audio>
                </section>
        </div>
            <div class="task-container">
                
            </div>
            <div id="moreTask"></div>
    </div>

<script>

</script>
</body>
</html>